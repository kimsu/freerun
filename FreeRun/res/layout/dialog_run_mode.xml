<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:gravity="bottom|center" 
    android:orientation="vertical"
    android:alpha="0.9" 
    android:background="@color/black_white"
    android:id="@+id/main_indoor_outdoor" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" >
  
    <ImageView 
        android:id="@+id/iv_run_mode_cancel" 
        android:padding="10.0dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:alpha="1"
        android:layout_width="50.0dip" 
        android:layout_height="50.0dip" 
        android:src="@drawable/run_mode_cancel" />
    
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_above="@id/iv_run_mode_cancel"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp" >
        
        <LinearLayout 
            android:id="@+id/layout_run_mode_indoor" 
            android:orientation="vertical" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content">
            
            <RelativeLayout 
                android:gravity="center" 
                android:layout_width="130.0dip" 
                android:layout_height="130.0dip" 
                android:layout_marginRight="10.0dip">
                <ImageView 
                    android:id="@+id/iv_run_mode_indoor" 
                    android:layout_width="110.0dip" 
                    android:layout_height="110.0dip" 
                    android:src="@drawable/run_mode_indoor" />
            </RelativeLayout>
            
            <TextView android:textSize="15.0dip" 
                android:textColor="@android:color/white" 
                android:gravity="center" 
                android:layout_gravity="center_horizontal" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="室内跑步\n(传感器记录)" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/layout_run_mode_outdoor" 
            android:orientation="vertical" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content">
            <RelativeLayout android:gravity="center" 
                android:layout_width="130.0dip" 
                android:layout_height="130.0dip" 
                android:layout_marginLeft="10.0dip">
                <ImageView 
                    android:id="@+id/iv_run_mode_outdoor" 
                    android:layout_width="110.0dip" 
                    android:layout_height="110.0dip" 
                    android:src="@drawable/run_mode_outdoor" />
            </RelativeLayout>
            
            <TextView android:textSize="15.0dip" 
                android:textColor="@android:color/white" 
                android:gravity="center" 
                android:layout_gravity="center_horizontal" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="户外跑步\n(GPS记录)" />
        </LinearLayout>
    </LinearLayout>
    
</RelativeLayout>